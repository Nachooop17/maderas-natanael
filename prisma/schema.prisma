// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
  // Borra la linea de previewFeatures, no la necesitamos con Postgres
}

datasource db {
  provider = "postgresql" // <--- EL CAMBIO MÃGICO
  url      = env("DATABASE_URL")
}

// ... tus modelos Producto y Usuario siguen igual ...

model Producto {
  
  id        String   @id @default(cuid()) 
  
  nombre    String
  precio    Int      // O Float si prefieres
  imagenUrl String
  creadoEn  DateTime @default(now())
}