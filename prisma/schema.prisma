// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
  // Borra la linea de previewFeatures, no la necesitamos con Postgres
}

datasource db {
  provider = "postgresql" // <--- EL CAMBIO MÃGICO
  url      = env("DATABASE_URL")
}

// ... tus modelos Producto y Usuario siguen igual ...

model Producto {
  id          Int      @id @default(autoincrement())
  nombre      String
  precio      Float
  imagenUrl   String
  creadoEn    DateTime @default(now())
}